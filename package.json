{
  "name": "panda",
  "version": "1.0.0",
  "description": "Server side render with remote modules",
  "private": "true",
  "workspaces": {
    "nohoist": [
      "**/ts-node",
      "**/webpack",
      "**/@panda/eslint-*",
      "**/@panda/prettier-*",
      "**/@panda/core-*",
      "**/@panda/core",
      "**/@panda/cli-*",
      "**/@panda/cli",
      "**/react-dom"
    ],
    "packages": [
      "shared/**",
      "tools/**",
      "cli/**",
      "core/**",
      "package/**",
      "widget/**"
    ]
  },
  "dependencies": {
    "lerna": "^6.6.1",
    "rimraf": "^4.4.1"
  },
  "scripts": {
    "bootstrap": "yarn install && yarn run lerna:bootstrap",
    "dev": "yarn run clear && yarn run bootstrap && yarn run lerna:build",
    "ğŸ”¥": "----------------------------------------",
    "lerna:bootstrap": "lerna bootstrap",
    "ğŸš§": "----------------------------------------",
    "lerna:test": "lerna run test --parallel",
    "ğŸ“¦": "----------------------------------------",
    "lerna:build": "yarn run lerna:build-cli && yarn run lerna:build-package",
    "lerna:build-cli": "lerna run build --parallel --scope @panda/cli-*",
    "lerna:build-package": "lerna run build --scope @panda/cli",
    "ğŸ§¹": "----------------------------------------",
    "clear": "yarn run clear:dist & yarn run clear:yarn.lock & yarn run clear:coverage & yarn run clear:node_modules",
    "clear:node_modules": "rimraf ./**/node_modules",
    "clear:yarn.lock": "rimraf ./yarn.lock",
    "clear:dist": "rimraf ./**/dist",
    "clear:coverage": "rimraf ./**/coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pan-alexey/talia.git"
  },
  "author": "Pan Alexey <pan-alexey@live.com>",
  "license": "MIT",
  "homepage": "https://github.com/pan-alexey/talia#readme"
}
